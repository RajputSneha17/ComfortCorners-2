<% layout('/layouts/boilerplate') %>
<body>
    <div class="form-container">
        <h3 class="form-title">Add New Listing</h3>
        <form action="/listings" method="POST" novalidate class="needs-validation">
            <!-- Title Input -->
            <div class="newformdiv">
                <label for="title" class="form-label">Title:</label>
                <input type="text" id="title" name="listing[title]" class="form-input" placeholder="Enter title" required> 
                <div class="invalid-feedback">
                    Please Enter the title
                </div>
                <div class="valid-feedback">
                    Looks good!
                </div>
            </div>

            <!-- Description Input -->
            <div class="newformdiv">
                <label for="description" class="form-label">Description:</label>
                <textarea id="description" name="listing[description]" class="form-textarea" placeholder="Enter description" required></textarea>
                <div class="valid-feedback">
                    Looks good!
                </div>
                <div class="invalid-feedback">
                    Please fill the description
                </div>
            </div>

            <!-- Image URL Input -->
            <div class="newformdiv">
                <label for="url" class="form-label">Image URL:</label>
                <input type="text" id="url" name="listing[image][url]" class="form-input" placeholder="Enter image URL">
                <div class="valid-feedback">
                    Looks good!
                </div>
            </div>

            <!-- Price Input -->
            <div class="newformdiv">
                <label for="price" class="form-label">Price:</label>
                <input type="number" id="price" name="listing[price]" class="form-input" placeholder="Enter price" required>
                <div class="valid-feedback">
                    Looks good!
                </div>
                <div class="invalid-feedback">
                    Please Enter Price
                </div>
            </div>

            <!-- Location Input -->
            <div class="newformdiv">
                <label for="location" class="form-label">Location:</label>
                <input type="text" id="location" name="listing[location]" class="form-input" placeholder="Enter location" required>
                <div class="valid-feedback">
                    Looks good!
                </div>
                <div class="invalid-feedback">
                    Please Enter Location
                </div>
            </div>

            <!-- Country Input -->
            <div class="newformdiv">
                <label for="country" class="form-label">Country:</label>
                <input type="text" id="country" name="listing[country]" class="form-input" placeholder="Enter country" required>
                <div class="valid-feedback">
                    Looks good!
                </div>
                <div class="invalid-feedback">
                    Please Enter Country name
                </div>
            </div>

            <!-- Submit Button -->
            <button type="submit" class="form-button">Add</button>
        </form>
    </div>
</body>